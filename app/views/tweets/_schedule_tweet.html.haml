- if current_user
	= simple_form_for @tweet, url: tweets_path, remote: true, method: :post, html: { class: 'form-horizontal' } do |f|
		= f.input :content_id, as: :hidden, input_html: { value: @content.id }
		= f.input :user_id, as: :hidden, input_html: { value: current_user.id }
		= f.button :submit, "Schedule Tweet", id: "schedule_tweet_button"
- else
	%p
		Please
		= link_to "Sign in with Twitter", "/auth/twitter?origin=#{request.original_url}"
		to share the tweet