/ ONLY USED ON THE ADMIN SIDE
- if current_user
	= simple_form_for @tweet, url: tweets_path, remote: true, method: :post do |f|
	  = f.input :message
	  = f.input :content_id, as: :select, collection: Content.all
	  = f.input :user_id, as: :hidden, input_html: { value: current_user.id }
	  / = f.simple_fields_for :content do |c|
	  /   = c.input :id, as: :select, collection: Content.all
	  = f.submit "Send Tweet"
- if current_facebook_user
	= simple_form_for @tweet, url: tweets_path, remote: true, method: :post do |f|
	  = f.input :message
	  = f.input :content_id, as: :select, collection: Content.all
	  = f.input :user_id, as: :hidden, input_html: { value: current_facebook_user.id }
	  / = f.simple_fields_for :content do |c|
	  /   = c.input :id, as: :select, collection: Content.all
	  = f.submit "Post to Facebook"