= simple_form_for @tweet, url: tweets_path, remote: true, method: :post, html: { class: 'form-horizontal' } do |f|
	= f.input :content_id, as: :hidden, input_html: { value: @content.id }
	= f.input :message, as: :text, input_html: { value: @content.post, maxlength: 140 }, label: "The message you will send out", wrapper_html: { class: 'row center' }
	= f.input :user_id, as: :hidden, input_html: { value: current_user.id }
	%p.b at this date and time
	%p 
		= @content.pretty_date
	= f.button :submit, "Sign me up!", id: "schedule_tweet_button"